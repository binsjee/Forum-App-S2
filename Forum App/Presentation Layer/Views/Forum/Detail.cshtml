@model Presentation_Layer.ViewModels.ForumDetailVM

@{
    ViewData["Title"] = "Home Page";
}
<body>
    <div class="col-md-12" style="margin-bottom: 30px;">
        <div class="row justify-content-around">
            <h1>Welkom bij het @Model.Title forum!</h1>
        </div>

        <div class="welkomRij">
            <div class="welkomRijContent">
                <a asp-area="" asp-controller="Post" asp-action="Create" id="addicon" class="material-icons">add_box</a>
            </div>
            <div class="welkomRijContent">
                <p>Maak een nieuwe post!</p>
            </div>
        </div>
        <div class="welkomRij">
            <div class="welkomRijContent">
                <a asp-area="" asp-controller="Post" asp-action="Index" id="forumIcon" class="material-icons">forum</a>
            </div>
            <div class="welkomRijContent">
                <p>Bekijk alle posts!</p>
            </div>
        </div>


    </div>
</body>