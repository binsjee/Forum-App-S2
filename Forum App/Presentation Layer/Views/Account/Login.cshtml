@model Presentation_Layer.ViewModels.AccountDetailVM

<div id="">
    <h1> Informatie Formulier </h1>
    <form asp-action="LoginAccount">
        <div class="formulierRij">
            <div class="formulier-half">
                <p><label asp-for="Username"></label></p>
                <input asp-for="Username" />
                <span asp-validation-for="Username"></span>
            </div>
        </div>
        <div class="formulierRij">
            <div class="formulier-half">
                <p><label asp-for="Password"></label></p>
                <input asp-for="Password" type="password"/>
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="formulierRij">
            @ViewBag.Message
        </div>
        <div class="formulierRij">
            <input type="submit" value="Opslaan" />
        </div>
    </form>
</div>