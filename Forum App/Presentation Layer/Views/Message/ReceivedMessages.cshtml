@model Presentation_Layer.ViewModels.MessageViewModel
@using Presentation_Layer.ViewModels

<div id="table-wrapper">
    <div id="table-scroll">
        <table class="table table-striped table-hover">
            <h1>Received Messages</h1>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Message Time</th>
                    <th>Sender</th>
                </tr>
            </thead>
            <tbody>
                @foreach(MessageDetailVM item in Model.Messages)
                {
                    @if(item.ReceiverId == Model.Receiver.Id)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MessageContent)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MessageTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SenderName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReceiverName)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
