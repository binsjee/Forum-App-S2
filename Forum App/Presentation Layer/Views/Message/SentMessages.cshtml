@using Presentation_Layer.ViewModels
@model Presentation_Layer.ViewModels.MessageViewModel 

<body>
    <a asp-area="" asp-controller="Post"></a>
    <div id="">
        <table class="table table-striped table-hover">
            <h1> Sent messages </h1>
            <thead>
                <tr>
                    <th>Titel</th>
                    <th>Content</th>
                    <th>Time</th>
                    <th>Receiver</th>
                </tr>
            </thead>
            <tbody>
                @foreach (MessageDetailVM item in Model.Messages)
                {
                    @if(item.SenderId == Model.Sender.Id)
                    {


                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MessageContent)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MessageTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReceiverName)
                        </td>
                    </tr>
                    }
                }
        </table>
    </div>
</body>